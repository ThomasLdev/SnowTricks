{% extends 'base.html.twig' %}

{% block header %}

    <div class="header-homepage d-flex justify-content-center align-items-center flex-column">
        <h1 class="title homepage-title text-white text-uppercase"></h1>

    </div>

    <a class="header-homepage-acre" href="#tricks-acre"><i class="fas fa-arrow-down fa-2x"></i></a>

{% endblock %}

{% block tricks %}
    <div class="container tricks-container" id="tricks-acre">
        <div class="row mt-3 d-flex justify-content-center align-items-center">
            {% for trick in tricks %}
                <div class="col-lg-3 col-md-5 col-12 d-flex justify-content-center align-items-center">
                <div class="card trick-card mt-4">
                    <div class="card-img-container">
                        <a href="{{ path('trick_show', { id: trick.id }) }}">
                            <img class="card-img-top trick-img" src="{{ asset('uploads/tricks/trick-test.jpg') }}"
                                 alt="trick image">
                            <div class="card-img-icon"><i class="far fa-eye fa-3x"></i></div>
                        </a>
                    </div>
                    <div class="card-body d-flex flex-row justify-content-around align-items-center">
                        <h5 class="card-title">
                            <a href="{{ path('trick_show', { id: trick.id }) }}">{{ trick.name|capitalize }}</a>
                        </h5>
                        <div class="trick-btn-wrapper d-flex justify-content-center align-items-center">
                            <a href="{{ path('trick_edit', { id: trick.id }) }}" class="btn btn-primary m-1">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                                <button class="btn bg-danger text-white m-1"><i
                                            class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
            {% endfor %}
        </div>
        <div class="w-100 d-flex justify-content-center align-items-center p-3">
            <a href="#" class="btn btn-lg bg-dark p-3 text-uppercase text-white m-1">Load More</a>
            <a href="{{ path('trick_new')}}" class="btn btn-lg bg-success p-3 text-uppercase text-white m-1">Add Trick</a>
        </div>
    </div>

